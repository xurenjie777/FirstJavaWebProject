<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.demo.mapper.StaffMapper">
    <insert id="add" parameterType="Staff" >
        insert into staff ( sex, name, password, department, level) values (#{sex},#{name},#{password},#{department},#{level})
    </insert>

    <delete id="delete" parameterType="Staff" >
        delete from staff where id= #{id}
    </delete>

    <select id="get" parameterType="int" resultType="Staff">
        select * from   staff  where id= #{id}
    </select>

    <update id="update" parameterType="Staff" >
        update staff set name=#{name}, sex = #{sex} where id=#{id}
    </update>

    <select id="list" resultType="Staff">
        select * from   staff
    </select>

    <select id="findByStaffName" resultType="Staff">
        select * from staff where name=#{name}
    </select>

    <select id="findByStaffDepartment" resultType="Staff">
        select * from staff where department=#{department}
    </select>

</mapper>
